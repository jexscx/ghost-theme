<nav class="pagination container medium">
    <div class="pagination-left">
        {{#if prev}}
            <a class="newer-posts button-arrow button-arrow-left"
                href="{{page_url prev}}">Nieuwere bijlagen</a>
        {{/if}}
    </div>
    <span class="page-number hidden-xs hidden-sm">Pagina {{page}} van
        {{pages}}</span>
    <div class="pagination-right">
        {{#if next}}
            <a class="older-posts button-arrow button-arrow-right"
                href="{{page_url next}}">Oudere bijlagen</a>
        {{/if}}
    </div>
</nav>